# College Climb Environment Variables
# Copy this file to .env and fill in your actual API keys

# ============================================
# OPENAI API CONFIGURATION
# ============================================
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# COLLEGE SCORECARD API CONFIGURATION
# ============================================
# Get your key from: https://collegescorecard.ed.gov/data/documentation/
COLLEGE_SCORECARD_API_KEY=your_college_scorecard_api_key_here

# ============================================
# FIREBASE CONFIGURATION (CRITICAL)
# ============================================
# Get these from Firebase Console > Project Settings > General
# IMPORTANT: These should be set in Vercel environment variables for production
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ============================================
# SECURITY & MONITORING
# ============================================
# Sentry Error Tracking (optional but recommended)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_id_here

# Note: Never commit the .env file to git!
# The .env file is already in .gitignore
